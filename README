CREATE DATABASE my_database;

USE my_database;

CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) NOT NULL,
    password VARCHAR(255) NOT NULL,
    role ENUM('admin', 'user', 'operator') NOT NULL,
    email VARCHAR(100) NOT NULL
);

CREATE TABLE password_resets (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT NOT NULL,
    reset_token VARCHAR(255) NOT NULL,
    expires_at DATETIME NOT NULL,
    FOREIGN KEY (user_id) REFERENCES users(id)
);


INSERT INTO users (username, password, role, email) VALUES
('admin', 'admin_password_hash', 'admin', 'admin@example.com'),
('user', 'user_password_hash', 'user', 'user@example.com'),
('operator', 'operator_password_hash', 'operator', 'operator@example.com');


CREATE TABLE api_keys (
    id INT AUTO_INCREMENT PRIMARY KEY,
    api_name VARCHAR(100) NOT NULL,
    api_key VARCHAR(64) NOT NULL UNIQUE
);


CREATE TABLE api_parameters (
    id INT AUTO_INCREMENT PRIMARY KEY,
    api_key VARCHAR(64) NOT NULL,
    parameter_name VARCHAR(100) NOT NULL,
    parameter_value VARCHAR(255) NOT NULL,
    FOREIGN KEY (api_key) REFERENCES api_keys(api_key)
);
